<% content_for :line %>
<div id="container">
  <section id = "contents">
    <div class = "table-container">
      <h2 class="text-success">LINE@</h2>
      <table class="table table-striped">
        <thead class = "text-white bg-success">
          <tr>
            <th scope="col">No.</th>
            <th scope="col">ジャンル</th>
            <th scope="col">内容</th>
          </tr>
        </thead>
        <tbody>
          <% @lines.each.with_index(1) do |line,i| %>
            <tr>
              <td scope="row"><%= i %></td>
              <td><%= line.genre %></td>
              <td><%= link_to "#{line.title}" , line  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>