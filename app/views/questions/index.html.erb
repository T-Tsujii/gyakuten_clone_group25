<div id ="container">
    <div class="container">
      <h2>新規投稿</h2>
      <%= form_with model: @question, local: true do |form| %>
      <%= render "layouts/error" %>
      <div class="form-group">
        <%= form.label :title, "【質問】" %>
        <%= form.text_area :title, class: "form-control", rows: "3" %>
      </div>
      <div class="form-group">
        <%= form.label :detail, "【詳細】" %>
        <%= form.text_area :detail, class: "form-control", rows: "5" %>
      </div class="form-group">
        <%= form.submit "送信", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
    <section id="questions">
        <div class="container">
            <% @questions.each do |question| %>
                <div class="question-container">
                    <%= link_to question do %>
                        <div class="question">
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="title-container">            
                                        <p class="title"><%= question.title %></p>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="info text-right">
                                        <p><%= question.created_at.strftime("%Y年%m月%d日") %></p>
                                        <p><%= "#{0} Views" %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </section>
</div>