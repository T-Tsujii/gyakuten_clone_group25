<div class="container-fluid">
  <div class="row">
    <% @movies.each.with_index(@movies.offset_value + 1) do |movie, i| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card border-dark mb-4">
          <div class="card-header p-0">
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src="<%= "#{movie.url}"%>" allowfullscreen></iframe>
            </div>
          </div>
          <div class="card-body text-dark">
            <div id="ajx_watched_movie">
              <%= render 'checks/check_movie', movie: movie%>
            </div>
            <p class="card-text movie-title">Lv.<%= i %>ï¼š<%= movie.title %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="paginate">
    <p><%= paginate @movies %></p>
  </div>
</div>
