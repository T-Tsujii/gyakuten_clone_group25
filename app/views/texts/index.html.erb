<div class="cntainer">
  <div class="texts-wrapper">
    <% if @trigger %>
      <div class="calendar-title mb-3">
        <h1>やんばるCODEイベント日程</h1>
      </div>
      <div class="g-calendar mb-5">
        <iframe src="https://calendar.google.com/calendar/htmlembed?src=addressbook%23contacts%40group.v.calendar.google.com&ctz=Asia%2FTokyo" style="border: 0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
      </div>
    <% end %>
    <h2 class="text-center">テキスト教材</h2>
    <div class="row mt-4">
      <% @texts.each.with_index(1) do |text, i| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card ml-1 mb-4" style="width: 21rem;">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect fill="#868e96" width="100%" height="100%"/><text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image cap</text></svg>
            <div class="card-body">
              <p id="card-title" class="card-title"><%= link_to "#{text.title}", text_path(text) %></p>
              <p class="card-text mt-4">【<%= text.genre %>】</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% 
=begin    カードスタイルにして見たのでコメントアウトしてます。
%>
<h2 class="text-center">テキスト教材</h2>
<section id="table">
  <table class="table table-striped">
    <thead>
      <tr class="bg-primary text-white">
      <th class="w-1" scope="col">No.</th>
      <th class="w-5" scope="col">内容</th>
      </tr>
    </thead>
    <tbody>
      <% @texts.each.with_index(1) do |text, i| %>
        <tr>
          <th scope="row" class="font-weight-normal"><%= i %></th>
          <td class="text-left pl-5"><%= link_to "#{text.title}", text_path(text) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
