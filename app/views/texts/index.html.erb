<h2 class="text-center">テキスト教材</h2>
<p>サロン特別割引適用パスワード：gyakutenseyo</p>
<%= form_tag('/texts/search', method: :get) do %>
  <%= label_tag :教材を探す %>
  <%= text_field_tag :search_title %>
  <%= submit_tag '検索' %>
<% end %>
<section id="table">
  <table class="table table-striped">
    <thead>
      <tr class="bg-primary text-white">
        <th scope="col">No.</th>
        <th scope="col" class="text-left pl-5">内容</th>
      </tr>
    </thead>
    <tbody>
      <% @texts.each.with_index(1) do |text, i| %>
        <tr>
          <th scope="row" class="font-weight-normal"><%= i %></th>
          <td class="text-left pl-5"><%= link_to "#{text.title}", texts_path(text) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
