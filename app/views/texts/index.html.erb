<h4 >テキスト教材</h4>
  <%= search_form_for @q do |f| %>
    <%= f.search_field :title_cont ,placeholder: '教材を探す', size:25 %>
    <%= f.submit ("探す") , class: 'btn btn-primary' %>
  <% end %>
<section id="table">
  <table class="table table-striped">
    <thead>
      <tr class="bg-primary text-white">
      <th class="w-1" scope="col">No.</th>
      <th class="w-5" scope="col">内容</th>
      </tr>
    </thead>
    <tbody>
      <% @texts.each.with_index(1) do |text, i| %>
        <tr>
          <th scope="row" class="font-weight-normal"><%= i %></th>
          <td class="text-left pl-5"><%= link_to "#{text.title}", text_path(text) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
